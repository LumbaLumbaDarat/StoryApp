<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.harifrizki.storyapp">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".module.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.StoryApp">
        <activity
            android:name=".module.story.addstory.AddStoryActivity"
            android:exported="false">
        </activity>
        <activity
            android:name=".module.story.detailstory.DetailStoryActivity"
            android:exported="false">
        </activity>
        <activity
            android:name=".module.story.liststory.ListStoryActivity"
            android:exported="false">
        </activity>
        <activity
            android:name=".module.errorpage.ConnectionErrorActivity"
            android:exported="false">
        </activity>
        <activity
            android:name=".module.splash.SplashScreenActivity"
            android:exported="true" />
        <activity
            android:name=".module.authentication.registration.RegistrationActivity"
            android:exported="true" />
        <activity
            android:name=".module.authentication.login.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>