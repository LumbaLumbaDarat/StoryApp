<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".module.splash.SplashScreenActivity">

    <com.github.florent37.shapeofview.shapes.RoundRectView
        android:id="@+id/rrv_apps_image"
        android:layout_width="@dimen/image_size_default"
        android:layout_height="@dimen/image_size_default"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.354"
        app:shape_roundRect_bottomLeftRadius="@dimen/round_default"
        app:shape_roundRect_bottomRightRadius="@dimen/round_default"
        app:shape_roundRect_topLeftRadius="@dimen/round_default"
        app:shape_roundRect_topRightRadius="@dimen/round_default">

        <ImageView
            android:id="@+id/iv_apps_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/default_wait_image" />
    </com.github.florent37.shapeofview.shapes.RoundRectView>

    <TextView
        android:id="@+id/tv_apps_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/oxygen_bold"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textSize="@dimen/text_biggest"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/margin_half_half_default"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/rrv_apps_image"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/rrv_apps_image"
        app:layout_constraintTop_toBottomOf="@+id/rrv_apps_image"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_apps_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_default"
        android:text="@string/app_version"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.954"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.977" />
</androidx.constraintlayout.widget.ConstraintLayout>