<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_default">

    <TextView
        android:id="@+id/tv_title_app"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_half_default"
        android:fontFamily="@font/oxygen_bold"
        android:text="@string/app_name"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_btn_setting"
        app:layout_constraintEnd_toStartOf="@+id/iv_btn_setting"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_btn_setting"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_sub_title_app"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/app_sub"
        android:layout_marginTop="@dimen/margin_half_half_default"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_title_app"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_title_app"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_app"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/iv_btn_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_transparent_ripple_primary"
        android:padding="@dimen/padding_half_default"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.363"
        app:srcCompat="@drawable/ic_round_settings_24"
        app:tint="@color/primary" />

</androidx.constraintlayout.widget.ConstraintLayout>