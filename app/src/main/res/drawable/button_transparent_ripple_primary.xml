<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/primary">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/primary"/>
            <corners android:radius="@dimen/round_default"/>
            <padding
                android:top="@dimen/padding_half_half_default"
                android:bottom="@dimen/padding_half_half_default"
                android:left="@dimen/padding_half_half_default"
                android:right="@dimen/padding_half_half_default"/>
        </shape>
    </item>

    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="@color/transparent"/>
            <corners android:radius="@dimen/round_default"/>
            <padding
                android:top="@dimen/padding_half_half_default"
                android:bottom="@dimen/padding_half_half_default"
                android:left="@dimen/padding_half_half_default"
                android:right="@dimen/padding_half_half_default"/>
        </shape>
    </item>
</ripple>